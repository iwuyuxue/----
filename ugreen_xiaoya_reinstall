#!/bin/bash
#变量赋值的等号两边不能有空格
path=$(docker inspect -f {{.HostConfig.Binds}} xiaoya |tr -d "[" |tr -d "]")
echo $path
echo "$path"
#if [ ! $path ]; then
# 注意中括号左右得有空格
if [ ! $path ]; then
echo "路径不存在"
else
echo "路径是：$path"
echo “docker run -d --restart=always --name="xiaoya" -p 5678:80 -p 2345:2345 -p 2346:2346 -v $path xiaoyaliu/alist:latest”
fi
